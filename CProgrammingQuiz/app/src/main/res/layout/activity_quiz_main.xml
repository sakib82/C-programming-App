<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizMainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMain"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="471dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="1dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/buttonquiz1"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="15dp"
            android:background="@color/colorMain"
            android:paddingLeft="20dp"
            android:drawableStart="@drawable/ic_book"
            android:text="learn C"
            android:textColor="@color/colorWhite"
            android:textSize="30sp" />
        <Button
            android:id="@+id/buttonquiz2"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="15dp"
            android:background="@color/colorMain"
            android:paddingLeft="20dp"
            android:drawableStart="@drawable/ic_create"
            android:text="quiz"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/buttonquiz3"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="15dp"
            android:background="@color/colorMain"
            android:paddingLeft="20dp"
            android:drawableStart="@drawable/ic_stars"
            android:text="Sample Program"
            android:textColor="@color/colorWhite"
            android:textSize="25sp" />
    </LinearLayout>

</RelativeLayout>