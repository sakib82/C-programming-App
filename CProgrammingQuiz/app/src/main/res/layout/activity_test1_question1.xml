<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Test1Question1"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text ="Beginner"
        android:textAlignment="center"
        android:textSize="25sp"
        android:background="@color/colorMain"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorMain"    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:backgroundTint="@color/colorMain"
            android:text="Question"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:text="1 / 10"
            android:textSize="18sp" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text ="If a=3 b=2 Then a%b=?"
        android:textAlignment="center"
        android:textSize="25sp"
        android:backgroundTint="@color/colorPrimaryDark"
        />

    <Button
        android:id="@+id/buttonoptionA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="23sp"
        android:layout_margin="15dp"
        android:background="#368CD9" />
    <Button
        android:id="@+id/buttonoptionB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="23sp"
        android:layout_margin="15dp"
        android:background="#368CD9" />
    <Button
        android:id="@+id/buttonoptionC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="23sp"
        android:layout_margin="15dp"
        android:background="#368CD9" />
    <Button
        android:id="@+id/buttonoptionD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="23sp"
        android:layout_margin="15dp"
        android:background="#368CD9" />


    <Button
        android:id="@+id/nextbuttonid"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="23sp"
        android:layout_margin="10dp"
        android:background="@color/colorMain"
        android:visibility="visible"
        android:layout_gravity="center"
        />

</LinearLayout>