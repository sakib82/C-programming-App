<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewProgramActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello World"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/colorMain"
            android:layout_margin="20dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sum of two number"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/colorMain"
            android:layout_margin="20dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Prime number"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/colorMain"
            android:layout_margin="20dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find factor of a numer"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/colorMain"
            android:layout_margin="20dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Palindrome"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/colorMain"
            android:layout_margin="20dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Odd or Even number"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/colorMain"
            android:layout_margin="20dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check leap year"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/colorMain"
            android:layout_margin="20dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GCD of two number"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/colorMain"
            android:layout_margin="20dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LCM of two number"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/colorMain"
            android:layout_margin="20dp"
            />

    </LinearLayout>

</ScrollView>

