            </intent-filter>
        </activity>
        <activity android:name=".QuizLevelActivity" />
        <activity android:name=".BeginnerLevelActivity" />
        <activity android:name=".QuizQuestionActivity" />
        <activity android:name=".ScoreBoardActivity" />
